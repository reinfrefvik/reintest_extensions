{
  "name": "reintest",
  "displayName": "reintest",
  "description": "text editor extension to highlight tests in spec files, and whole comment blocks",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reintest.toggleTestHighlight",
        "title": "Toggle Hightlight Tests in Spec Files"
      }
    ],
    "configuration": {
      "title": "Reintest",
      "properties": {
        "reintest.testHighlightColor": {
          "type": "string",
          "default": "rgba(100,150,240,0.15)",
          "description": "Color for test highlighting in spec files."
        },
        "reintest.descHighlightColor": {
          "type": "string",
          "default": "rgba(226, 100, 240, 0.1)",
          "description": "Color for description highlighting in spec files."
        },
        "reintest.blockHighlightColor": {
          "type": "string",
          "default": "rgba(100, 240, 100, 0.05)",
          "description": "Color for whole blocks spanning between comments."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
